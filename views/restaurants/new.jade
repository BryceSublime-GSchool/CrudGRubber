extends ../layout

block content
  .row
    .col.s12
      ul.tabs
        li.tab.col.s3
          a(href='/restaurants') Restaurants
        li.tab.col.s3
          a.active(href='/neighborhoods') Neighborhoods
        li.tab.col.s3
          a(href='/admin') Admin
    h3 create new restaurant
    br  
    br
    br
    div.valign-wrapper
      div.container
        form(action="/restaurants" method="POST")
              input(type="text" placeholder="Name" name="name" value=info ? info.name: '')
              input(type="text" placeholder="streetOne" name="streetOne")
              input(type="text" placeholder="streetTwo" name="streetTwo")
              input(type="text" placeholder="City" name="city")
              select(name="state")
                option(value="CO") CO
                option(value="CA") CA
                option(value="NY") NY
                option(value="AZ") AZ
                option(value="HI") HI
                option(value="TX") TX
                option(value="FL") FL
                option(value="VT") VT
                option(value="OR") OR
                option(value="WY") WY
              input(type="text" placeholder="zip" name="zip")
              select(name="cuisine")
                option(value="American") American
                option(value="Thai") Thai
                option(value="Chinese") Chinese
                option(value="Vietnamese") Vietnamese
                option(value="Mexican") Mexican
                option(value="Chilean") Chilean
              select(name="neighborhoodId")
                option(value="1") LoHi
                option(value="2") Cap Hill
                option(value="3") LoDo
              input(type="radio" name="rating" value="1" checked)
              input(type="radio" name="rating" value="2") 
              input(type="radio" name="rating" value="3") 
              input(type="radio" name="rating" value="4") 
              input(type="radio" name="rating" value="5")  
              input(type="text" placeholder="image URL" name="img")
              textarea(type="text" placeholder="bio" name="bio")
      input(id="submit" type="submit")
