extends ../layout

block content
  .row
    .col.s12
      ul.tabs
        li.tab.col.s3
          a(href='/restaurants') Restaurants
        li.tab.col.s3
          a.active(href='/neighborhoods') Neighborhoods
        li.tab.col.s3
          a(href='/admin') Admin
    .header
      h1 gTables
    .newRest
      a(href="/restaurants/new") Create
    .bigContainer
      each restaurant in restaurants
        div.box
          a(href='/restaurants/#{restaurant.id}') 
          h4= restaurant.name
          .imageDiv
            a(href='/restaurants/#{restaurant.id}')
              img(src="#{restaurant.img}" class="image")
            h4= restaurant.city 
            h4= restaurant.state  
            h4= restaurant.cuisine
          //- h3 restaurant.rating} Stars!!
          h4= restaurant.bio
          h4= restaurant.neighborhood
          .starDiv
            -for(var i=0; i < restaurant.rating; i++)
              img.star(src='http://www.clker.com/cliparts/R/i/A/t/X/O/star-orange-md.png')
